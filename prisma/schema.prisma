model User {
  id    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email   String   @unique
  firstName    String?
  accountId String?
  lastName    String?
  status String?
  created String?
  localTimeZone String?
  locale String @default("en_US")
